{
    "name": "ziwot/cake-chartscss",
    "description": "ChartsCss plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "steven j",
            "email": "hi@sjehan.net"
        }
    ],
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5.5 || ^11.1.3",
        "cakephp/cakephp-codesniffer": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "ChartsCss\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChartsCss\\Test\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p src/ tests/",
        "cs-fix": "phpcbf --colors -p src/ tests/",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-clover=clover.xml"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
